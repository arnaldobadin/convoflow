{
    "compilerOptions": {
        "lib": ["ES2021", "ES6", "es2015", "ESNext", "DOM"],
        "target": "ESNext",
        "module": "commonjs",
        "allowJs": true,
        "checkJs": false,
        "declaration": true,
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": ".",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": ["node_modules", "dist", "docs", "tests", ".github", "examples"]
}